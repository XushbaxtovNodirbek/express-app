<div class="d-flex align-items-center py-4 bg-body-tertiary">
 <div class="form-signin w-25 m-auto">
    <form action="/add-products" method="post">
    <img class="mb-4" src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">ADD PRODUCT</h1>
    
      {{#if prductsaveError}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Error!</strong> {{prductsaveError}}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      {{/if}}

    <div class="form-floating mb-1">
      <input name="title" type="text" class="form-control" id="floatingInput" placeholder="Product title">
      <label for="floatingInput">Product title</label>
    </div>

    <div class="form-floating mb-1">
        <textarea  name="description" class="form-control" placeholder="Leave a description here" id="floatingTextarea2" style="height: 100px"></textarea>
        <label for="floatingTextarea2">Description</label>
    </div>

    <div class="form-floating mb-1">
      <input name="image" type="text" class="form-control" id="floatingInput" placeholder="Image">
      <label for="floatingInput">Imgae Src</label>
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text bg-light">$</span>
        <div class="form-floating">
            <input type="number" name="price" class="form-control" id="floatingInputGroup1" placeholder="Price">
            <label for="floatingInputGroup1">Price</label>
        </div>
    </div>

    {{#if productId}}
        <input type="hidden" name="productId" value="{{productId}}">
    {{/if}}
    
    <button class="btn btn-primary w-100 py-2" type="submit">ADD PRODUCT</button>
    <p class="mt-5 mb-3 text-body-secondary">© 2017–2023</p>
  </form>
 </div>
</div>
