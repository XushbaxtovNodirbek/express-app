<div class="container">
<div class="row row-cols-1 row-cols-md-3 g-4">

    {{#each products}}
        <div class="col">
            <div class="card">
                <img src={{image}} class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <div class="d-flex justify-content-between">
                        <a href="/product-about?id={{_id}}" class="btn btn-primary">Batafsil..</a>
                        <button class="btn btn-warning" style="cursor: default;">Prise: {{price}}$</button>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
</div>
